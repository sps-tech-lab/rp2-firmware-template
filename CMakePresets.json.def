{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name":      "Waveshare_rp2040_lcd_1.28",
      "binaryDir": "${sourceDir}/build/waveshare_rp2040_lcd_1.28",
      "cacheVariables": {
        "PICO_BOARD": "waveshare_rp2040_lcd_1.28"
      },
      "environment": {
        "PICO_SDK_PATH": "${sourceDir}/third_party/pico-sdk"
      }
    },
    {
      "name":      "Waveshare_rp2040_pizero",
      "binaryDir": "${sourceDir}/build/waveshare_rp2040_pizero",
      "cacheVariables": {
        "PICO_BOARD": "waveshare_rp2040_pizero"
      },
      "environment": {
        "PICO_SDK_PATH": "${sourceDir}/third_party/pico-sdk"
      }
    },
    {
      "name": "unit-tests",
      "binaryDir": "${sourceDir}/build/unit-tests",
      "generator": "Ninja",
      "cacheVariables": {
        "RP2_ENABLE_TESTS": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "FETCHCONTENT_BASE_DIR": "${sourceDir}/third_party/catch2"
      }
    }
  ],
  "buildPresets": [
    {
      "name":            "Waveshare_rp2040_lcd_1.28",
      "configurePreset": "Waveshare_rp2040_lcd_1.28"
    },
    {
      "name":            "Waveshare_rp2040_pizero",
      "configurePreset": "Waveshare_rp2040_pizero"
    },
    {
      "name": "unit-tests",
      "configurePreset": "unit-tests"
    }
  ]
}
